<h1>Change a MLB Game</h1>


<%= form_for @mlbgame do |f| %>
 
  <% if @mlbgame.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@mlbgame.errors.count, "error") %> prohibited
        this game from being saved:
      </h2>
      <ul>
        <% @mlbgame.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
 
		<p>
    <%= f.label "Date" %><br>
    <%= f.text_field :date %>
  </p>
  
  <p>
    <%= f.label "Away" %><br>
    <%= f.text_field :away %>
  </p>
  
  <p>
    <%= f.label "Home" %><br>
    <%= f.text_field :home %>
  </p>
  
  <p>Prediction:<br>
  	Away: <%= @mlbgame.a_pred %><br>
  	Home: <%= @mlbgame.h_pred %>
 	</p>
 	
   <p>
    <%= f.label "Away Score" %><br>
    <%= f.text_field :a_actual %>
  </p>
  
  <p>
    <%= f.label "Home Score" %><br>
    <%= f.text_field :h_actual %>
  </p>
  
  <p>
    <%= f.label "Correct? "%><br>
    <%= f.text_field :correct %>
  </p>
 
  <p>
    <%= f.submit 'Submit' %>
  </p>
 
	<% end %>

<%= link_to 'Back', mlbgames_path %>
